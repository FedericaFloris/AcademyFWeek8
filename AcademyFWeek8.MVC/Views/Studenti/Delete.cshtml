
@model StudenteViewModel

<p>Sei sicuro di voler eliminare lo studente @Model.ID - @Model.Nome - @Model.Cognome?</p>
<form method="post"> //va nel metodo post del controller
    <div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" readonly />
    <span asp-validation-for="Nome" class="Text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Cognome"></label>
    <input asp-for="Cognome" class="form-control" readonly/>
    <span asp-validation-for="Cognome" class="Text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="TitoloStudio"></label>
    <input asp-for="TitoloStudio" class="form-control" readonly/>
    <span asp-validation-for="TitoloStudio" class="Text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DataNascita"></label>
    <input asp-for="DataNascita" class="form-control" readonly/>
    <span asp-validation-for="DataNascita" class="Text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly/>
    <span asp-validation-for="Email" class="Text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CorsoCodice"></label>
    <input asp-for="CorsoCodice" class="form-control" readonly/>
    <span asp-validation-for="CorsoCodice" class="Text-danger"></span>
</div>

<input type="submit" value="Conferma Eliminazione" class="btn btn-danger" />

<a class="btn btn-primary " asp-controller="Studenti" asp-action="Index">Indietro</a>
</form>
