@model ICollection<UtenteLoginViewModel>

<h1>Ecco la lista degli Utenti</h1>


<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach( var item in Model)
        {
            <tr>
                <td>@item.Username</td>
               
               <td>
                   @* pulsante "Visualizza dettagli"*@
                   <a class= "btn btn-primary" asp-controller="Utenti" asp-action="Details" asp-route-id="@item.Username">Visualizza dettagli</a>
                  @* <a class= "btn btn-primary" asp-controller="Corsi" asp-action="Edit" asp-route-id="@item.CorsoCodice">Modifica</a>
                   <a class= "btn btn-danger" asp-controller="Corsi" asp-action="Delete" asp-route-id="@item.CorsoCodice">Elimina</a>*@
               </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
     
</table>
