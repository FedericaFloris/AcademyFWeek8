@model CorsoViewModel

<p>Sei sicuro di voler eliminare il corso @Model.CorsoCodice - @Model.Nome ?</p>
<form method="post"> //va nel metodo post del controller
<div class="form-group">
    <label asp-for="CorsoCodice"></label>
    <input asp-for="CorsoCodice" class="form-control" readonly/> //readonly perchè non posso modificarlo
    <span asp-validation-for="CorsoCodice" class="Text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" readonly />
    <span asp-validation-for="Nome" class="Text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Descrizione"></label>
    <input asp-for="Descrizione" class="form-control" readonly/>
    <span asp-validation-for="Descrizione" class="Text-danger"></span>
</div>

<input type="submit" value="Conferma Eliminazione" class="btn btn-danger" />

<a class="btn btn-primary " asp-controller="Corsi" asp-action="Index">Indietro</a>
</form>
